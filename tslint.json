{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "max-line-length": {
            "options": [80],
            "severity": "warning"
        },
        "semicolon": [true,"always"],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "no-trailing-whitespace": {
            "options": true,
            "severity": "warning"
        },
    },
    "rulesDirectory": []
}
